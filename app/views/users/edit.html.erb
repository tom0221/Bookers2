<h1>User info</h1>

<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
      <h3>error</h3>
    <div class="alert alert-warning">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <h4>Name</h4>
   <%= f.text_field :name %>

   <h4>Image</h4>
   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

   <h4>Introduction</h4>
   <%= f.text_area :introduction %>

   <%=f.submit 'Update User' %>

<% end %>


